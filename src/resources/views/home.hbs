<div class="container-fluid">
{{#each courses }}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.detail}}</p>
            <a href="{{this._id}}" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
{{/each}}

</div>